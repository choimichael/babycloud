<p id="notice"><%= notice %></p>

<% @post.images.each do |image| %>
<% if image.content_content_type %>
<%= image_tag image.content.url, width: '500px'%>
<% end %>
<% end %>

<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>

<p>
	<strong>Description:</strong>
	<%= @post.description %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
