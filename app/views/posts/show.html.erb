<div class="container">
	
	<div class="row">
		
		<div class="col-md-4"></div>
		
			<div class="col-md-4">
		
				<% @post.images.each do |image| %>
						<% if image.content_content_type %>
							<%= image_tag image.content.url %>
							<%= link_to 'Edit', edit_post_path(image), class: "btn btn-success"%>
								<%= link_to 'Delete', @post, {method: :delete, data: {confirm: "Are you sure you want to delete this adorable photo?"}, class: "btn btn-danger"} %>
						<% end %>
					<% end %>
			
				<%= form_for @post, :html => { :multipart => true } do |f| %>
		
					<h3>Title</h3>
					<%= @post.title %>
							
					<h3>Description</h3>
					<%= @post.description %>
				
				<% end %>
			
			</div>
	
	</div>

</div>

