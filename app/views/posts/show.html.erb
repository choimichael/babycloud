<div class="container">
	
	<div class="row text-center">
			

		<% if @post.image_content_type %>
				<%= image_tag @post.image.url, class: "img-responsive" %>

	</div>

<!-- 	<div class="col-md-"></div> -->
		<div class="col-md-3">
			<%= link_to 'Edit', edit_post_path, class: "btn btn-success"%>
			<%= link_to 'Delete', @post, {method: :delete, data: {confirm: "Are you sure you want to delete this adorable photo?"}, class: "btn btn-danger"} %>
			<% end %>
		
		
			<%= form_for @post, :html => { :multipart => true } do |f| %>

					<h3>Title</h3>
					<%= @post.title %>
							
					<h3>Description</h3>
					<%= @post.description %>
				
				<% end %>
			
			</div>
</div>

