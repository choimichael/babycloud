<h1>Baby Photos</h1>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Picture</th>
			<th>Date</th>
		</tr>
	</thead>
	

	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.description %></td>
				<td><%  post.images.each do |image| %></td>
				<td><%= link_to (posts_path(image)) do %></td>
				<td><%= image_tag image.content.url %></td>
				<td><% end %></td>
				<td><% end %></td>
				<td><%= post.created_at.strftime("%B %d, %Y") %></td>
				<td><%= link_to 'Show', post %></td> 
				<td><%= link_to 'Edit', edit_post_path(post) %></td>
				<td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>

<%= link_to 'Gallery', grid_path, class: "btn btn-primary" %>