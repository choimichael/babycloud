<div class="container">
	
				<%= form_for @post, :html => { :multipart => true } do |f| %>
						
						<% if @post.errors.any? %>
							<div id="error_explanation">
								<h2><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:</h2>
								<ul>
								<% @post.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
								</ul>
							</div>
						<% end %>

						<div class="well well-md">

							<!-- Input title of the image -->
							<h2>Title</h2>
							<%= f.text_field :title, class: "form-control" %>
					
							<!-- Upload Image -->
							<%= f.fields_for :images do |ph| %>
								<% unless ph.object.new_record? %>
									<%= image_tag ph.object.content.url %>
								<% end %>
								<%= ph.file_field :content %>
							<% end %>
							
							<!-- Input description of the image -->
							<h2>Description</h2>
							<%= f.text_area :description, size: "30x10", class: "form-control" %>

							<%= f.submit "Upload", class: "btn btn-success" %>
						</div>
					<% end %>
			
	
			
</div>