<div class="container">
  <div class="row">

        <% @posts.each do |post| %>
            
              <%= link_to (post) do %>
                <% if post.image_content_type %>
                
                  <div class="col-sm-2">
                  
                    <%= image_tag post.image.url, class: "thumbnail img-thumbnail" %>
                  
                  </div>
                
                <% end %>
              <% end %>
        <% end %>
      
  </div>
</div>
